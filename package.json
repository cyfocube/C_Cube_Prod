{
  "name": "secure-cold-wallet",
  "version": "1.0.0",
  "description": "Secure offline cold wallet application for multiple blockchains",
  "main": "public/electron.js",
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none PORT=9000 npm run react-start\" \"wait-on http://localhost:9000 && electron .\"",
    "start-web": "react-scripts start",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "build": "react-scripts build",
    "build-web": "react-scripts build",
    "build-electron": "npm run react-build && npm run electron-build",
    "build-desktop": "npm run react-build && npm run dist",
    "dist": "electron-builder --publish=never",
    "dist-mac": "npm run react-build && electron-builder --mac",
    "dist-win": "npm run react-build && electron-builder --win",
    "dist-all": "npm run react-build && electron-builder --mac --win",
    "release": "npm run react-build && electron-builder --publish=always",
    "build-desktop-app": "node build-desktop.js",
    "deploy-downloads": "node deploy-downloads.js",
    "build-and-deploy": "npm run build-desktop-app && npm run deploy-downloads",
    "serve": "npx serve -s build -l 3000",
    "preview": "npm run build-web && npm run serve"
  },
  "author": "C-Cube Development Team",
  "license": "MIT",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "bitcoinjs-lib": "^6.1.0",
    "crypto-js": "^4.1.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.3.0",
    "ethers": "^5.7.2",
    "qrcode.react": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.3",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.6",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "electron": "^21.3.0",
    "electron-builder": "^23.6.0",
    "serve": "^14.2.5",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.ccube.coldwallet",
    "productName": "C-Cube Cold Wallet",
    "copyright": "Copyright Â© 2024 ${author}",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js",
      "public/preload.js"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "public/C-Cube_Learning_Guide.pdf",
        "to": "app/C-Cube_Learning_Guide.pdf"
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Finance",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
